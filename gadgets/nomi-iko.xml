                            grouplist = grouplist + '<option value="userId">' + displayName + '</option>';
//                            grouplist = grouplist + '<option value="userId">' + userId + '</option>';
                        }
                        document.getElementById("group_to").innerHTML = grouplist;
                    });
                });
            }

